{
  "extends": "@wprdc/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["dom", "ES2015"],
    "module": "ESNext",
    "target": "ES6",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"]
}
